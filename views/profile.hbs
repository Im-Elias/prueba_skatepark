<div class="py-4">
  <h2>Datos del perfil</h2>
  <hr class="w-50" />

  <form method="POST" action="/profile" enctype="multipart/form-data">
    <div class="form-group row w-50 m-auto">
      <div class="form-group col-12 col-sm-6">
        <label>Email</label>
        <input class="form-control m-auto" disabled value={{skater.email}} />
        <input
          class="form-control m-auto d-none"
          value={{skater.email}}
          type="email"
          id="email"
          name="email"
        />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Nombre</label>
        <input
          class="form-control m-auto"
          value={{skater.nombre}}
          id="name"
          name="name"
        />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Password</label>
        <input
          type="password"
          class="form-control m-auto"
          value={{skater.password}}
          id="password"
          name="password"
        />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Repita la password</label>
        <input
          type="password"
          class="form-control m-auto"
          value={{skater.password}}
        />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>AÃ±os de experiencia</label>
        <input
          class="form-control m-auto"
          value={{skater.anos_experiencia}}
          id="years"
          name="years"
        />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Especialidad</label>
        <input
          class="form-control m-auto"
          value={{skater.especialidad}}
          id="speciality"
          name="speciality"
        />
      </div>
    </div>
    <div class="mb-1">
      <button
        class="btn btn-primary"
        type="submit"
        name="action"
        value="update"
      >Actualizar</button>
    </div>
    <div>
      <button
        class="btn btn-danger"
        type="submit"
        name="action"
        value="delete"
      >Eliminar cuenta</button>
    </div>
  </form>
</div>