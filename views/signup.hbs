<div class="py-4">
  <h2>Registro</h2>
  <hr class="w-50" />

  <form method="POST" action="/add-skater" enctype="multipart/form-data">
    <div class="form-group row w-50 m-auto">
      <div class="form-group col-12 col-sm-6">
        <label>Email</label>
        <input
          class="form-control m-auto"
          type="email"
          id="email"
          name="email"
        />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Nombre</label>
        <input class="form-control m-auto" type="text" id="name" name="name" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Password</label>
        <input
          class="form-control m-auto"
          type="password"
          id="password"
          name="password"
        />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Repita la password</label>
        <input class="form-control m-auto" type="password" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Años de experiencia</label>
        <input
          class="form-control m-auto"
          type="number"
          id="years"
          name="years"
        />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Especialidad</label>
        <input
          class="form-control m-auto"
          type="text"
          id="speciality"
          name="speciality"
        />
      </div>
      <div class="form-group col-12 col-sm-12">
        <label>Foto de perfil</label>
        <input type="file" id="photo" name="photo" />
      </div>
    </div>
    <button class="btn btn-info mb-3" type="submit">Registrarme</button>
    <p><a href="/login"> Iniciar sesión</a></p>
  </form>
</div>